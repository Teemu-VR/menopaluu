---
import Tour from '../components/Tour.astro'
import { Test } from '../components/Test.tsx'
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Meno-paluu tulevaisuuteen</title>
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<style global>
			@import '@vr-core/web-components/normalize.css';
			@import '@vr-core/web-components/css/button.module.css';
			@import '../styles/global.css';
			--default-icon-color: var(--color-green08);
		</style>
	</head>
	<body>
		<main>
			<header>
				<div>
					<img width="60" height="80" src="/assets/logo.svg" alt="Astro logo" />
